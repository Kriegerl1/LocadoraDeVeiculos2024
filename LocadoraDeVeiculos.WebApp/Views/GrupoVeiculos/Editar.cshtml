@model FormGrupoViewModel
@{
    ViewBag.Title = "Editar Grupo de Veículos";
}

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-lg-6 ">
        <form asp-action="Editar" class="d-grid">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <button type="submit" value="Editar" class="btn btn-primary" >Cadastrar</button>
        </form>

        <a asp-action="Listar" class="btn btn-secondary">Voltar</a>
    </div>
</div>