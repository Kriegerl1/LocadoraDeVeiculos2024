@model IEnumerable<ListarGrupoViewModel>
@{
    ViewBag.Title = "Lista de Grupos de Veículos";
}
<table class="table">
    <thead>
        <tr>
            <th>Nome do Grupo</th>
            <th>Quantidade de Carros</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grupo in Model)
        {
            <tr>
                <td>@grupo.Nome</td>
                <td>@grupo.Grupos</td>
                <td class="d-flex gap-2">
                    <a asp-action="Editar" asp-route-id="@grupo.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@grupo.Id" class="btn btn-danger">Excluir</a>
                    <a asp-action="Detalhes" asp-route-id="@grupo.Id" class="btn btn-primary">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Cadastrar" class="btn btn-primary">Cadastrar Novo Grupo de Veículos</a>
