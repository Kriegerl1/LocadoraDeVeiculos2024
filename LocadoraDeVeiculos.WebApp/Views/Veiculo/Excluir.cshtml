@model FormVeiculoViewModel
@{
    ViewBag.Title = "Excluir Veículo";
}
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-lg-6 ">
        <div class="alert alert-danger" role="alert">
            <strong>Tem certeza que deseja excluir este veículo?</strong>
        </div>

        <div class="form-group">
            <label>Cor:</label>
            <input class="form-control" value="@Model.Cor" disabled />
        </div>

        <div class="form-group">
            <label>Marca:</label>
            <input class="form-control" value="@Model.Marca" disabled />
        </div>

        <div class="form-group">
            <label>Combustível:</label>
            <input class="form-control" value="@Model.Combustivel" disabled />
        </div>

        <div class="form-group">
            <label>Ano:</label>
            <input class="form-control" value="@Model.Ano" disabled />
        </div>

        <div class="form-group">
            <label>Placa:</label>
            <input class="form-control" value="@Model.Placa" disabled />
        </div>

        <div class="form-group">
            <label>Modelo:</label>
            <input class="form-control" value="@Model.Modelo" disabled />
        </div>

        <div class="form-group">
            <label>Quilometragem:</label>
            <input class="form-control" value="@Model.Quilometragem" disabled />
        </div>

        <div class="form-group">
            <label>Capacidade do Tanque de Combustível:</label>
            <input class="form-control" value="@Model.CapacidadeTanqueDeCombustivel" disabled />
        </div>

        <form asp-action="Excluir" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-3">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
