@model LoginEmpresaViewModel

@{
    ViewBag.Title = "Login de Usuário";
}

<div class="row">
    <div class="col-lg-6">
        <form class="d-grid gap-3" asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="LembrarMe" class="form-check-input" type="checkbox" />
                <label asp-for="LembrarMe" class="form-check-label">Lembrar-me</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary mt-2" />
                <a asp-action="Registrar" class="btn btn-secondary mt-2">Registrar</a>
            </div>
        </form>
    </div>
</div>
