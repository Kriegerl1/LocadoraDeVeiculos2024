@model FormTaxasViewModel

@{
    ViewBag.Title = "Cadastro de Taxa ou Serviço";
}
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-lg-6 ">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor:</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Tipo de Cobrança:</label><br />
                <div class="btn-group" role="group" aria-label="Tipo de Cobrança">
                    <input type="radio" class="btn-check" id="cobrancaMensal" name="TipoDeCobranca" value="true" checked />
                    <label for="cobrancaMensal" class="btn btn-outline-secondary">Fixa</label>

                    <input type="radio" class="btn-check" id="cobrancaDiaria" name="TipoDeCobranca" value="false" />
                    <label for="cobrancaDiaria" class="btn btn-outline-secondary">Diária</label>
                </div>
                <span asp-validation-for="TipoDeCobranca" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary" >Cadastrar</button>
                <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
