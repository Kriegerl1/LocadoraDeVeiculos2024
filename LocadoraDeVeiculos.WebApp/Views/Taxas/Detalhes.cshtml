@model FormTaxasViewModel
@{
    ViewBag.Title = "Detalhes da Taxa";
}
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-lg-6 ">
        <div class="form-group">
            <label>Nome:</label>
            <input class="form-control" value="@Model.Nome" disabled />
        </div>

        <div class="form-group">
            <label>Valor:</label>
            <input class="form-control" value="@Model.Valor.ToString("C")" disabled />
        </div>

        <div class="form-group">
            <label>Tipo de Cobrança:</label>
            <input class="form-control" value="@(Model.TipoDeCobranca ? "Mensal" : "Diária")" disabled />
        </div>

        <hr />

        <div class="form-group my-3">
            <a asp-action="Listar" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>
