@{
    MensagemViewModel? mensagem = ViewBag.Mensagem ?? null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Locadora De Veiculos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LocadoraDeVeiculos.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
</head>
<body style="height:auto; margin-bottom: 7rem;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid mx-lg-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Locadora De Veiculos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end fs-5">
                        @if (User.Identity is not null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Veiculo" asp-action="Listar">Veiculos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="GrupoVeiculos" asp-action="Listar">Grupos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Plano" asp-action="Listar">Planos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Listar">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Condutor" asp-action="Listar">Condutores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Taxas" asp-action="Listar">Taxas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Aluguel" asp-action="Listar">Alugueis</a>
                            </li>

                            <div class="dropdown">

                                <button class="btn btn-outline-primary dropdown-toggle mx-3 px-3 d-flex flex-nowrap align-items-center" type="button" id="dropMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-vcard-fill px-2"></i>
                                    @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropMenu">

                                    <li>
                                        <button class="dropdown-item d-flex flex-nowrap align-items-center" type="button">
                                            <i class="bi bi-person-square"></i>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Funcionario" asp-action="Listar">Funcionario</a>
                                        </button>
                                    </li>

                                    <li>
                                        <button class="dropdown-item d-flex flex-nowrap align-items-center" type="button">
                                            <i class="bi bi-fuel-pump"></i>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Combustivel" asp-action="Configuracao">Combustível</a>
                                        </button>
                                    </li>
                                </ul>
                            </div>

                            <form asp-controller="Auth" asp-action="Logout">
                                <button class="btn btn-secondary px-3">
                                    <i class="bi bi-box-arrow-right"></i>
                                    Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="d-flex flex-lg-nowrap">
                                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary me-2 px-4">Login</a>
                                <a asp-controller="Auth" asp-action="Registrar" class="btn btn-outline-primary px-4">Registro</a>
                            </div>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <h1 class="text-light-emphasis">@ViewBag.Title</h1>
        <hr />
        <main role="main" class="pb-3">
            <partial name="_Mensagem" model="mensagem"></partial>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center align-content-center">
            &copy; 2024 - Locadora De Veiculos 2024 - Desenvolvido por
            <a href="https://github.com/Kriegerl1"
               style="text-decoration:none;accent-color:black; font-weight:700; color:#8B0000;margin-inline-start: .5rem">
            Leo Rodrigues</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
