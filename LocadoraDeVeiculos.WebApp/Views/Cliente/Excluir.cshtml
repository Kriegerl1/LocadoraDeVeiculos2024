@model FormClienteViewModel
@{
    ViewBag.Title = "Excluir Cliente";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger" role="alert">
    <strong>Tem certeza que deseja excluir este cliente?</strong>
</div>

<div class="form-group">
    <label>RG:</label>
    <input class="form-control" value="@Model.RG" disabled />
</div>

<div class="form-group">
    <label>Nome:</label>
    <input class="form-control" value="@Model.Nome" disabled />
</div>

<div class="form-group">
    <label>Email:</label>
    <input class="form-control" value="@Model.Email" disabled />
</div>

<div class="form-group">
    <label>Telefone:</label>
    <input class="form-control" value="@Model.Telefone" disabled />
</div>

<div class="form-group">
    <label>Endereço:</label>
    <input class="form-control" value="@Model.Endereco" disabled />
</div>

<div class="form-group">
    <label>CPF:</label>
    <input class="form-control" value="@Model.CPF" disabled />
</div>

<div class="form-group">
    <label>CNPJ:</label>
    <input class="form-control" value="@Model.CNPJ" disabled />
</div>

<div class="form-group">
    <label>Tipo de Perfil:</label>
    <input class="form-control" value="@(Model.TipoPerfil ? "Pessoa Física" : "Pessoa Jurídica")" disabled />
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
